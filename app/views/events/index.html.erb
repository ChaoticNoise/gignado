<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Type</th>
        <th>Title</th>
        <th>Status</th>
        <th>Start time</th>
        <th>End time</th>
        <th>Location</th>
        <th>Details</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.type %></td>
          <td><%= event.title %></td>
          <td><%= event.status %></td>
          <td><%= event.start_time %></td>
          <td><%= event.end_time %></td>
          <td><%= event.location %></td>
          <td><%= event.details %></td>
          <td><%= link_to 'Show', event %></td>
          <%- if event.is_a? Gig %>
            <td><%= link_to 'Edit', edit_gig_path(event) %></td>
          <% end %>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

