<%- if notice.present? %>
  <%= render partial: 'shared/alerts', locals: { type: 'success', text: notice } %>
<% end %>

<div class="page-header">
  <h2>Events</h2>
  <div class="row">
    <div class="col-md-12">
      <%= link_to '#', id: "events-sync", class: "btn", remote: true do %>
        <%= fa_icon 'refresh' %> Sync
      <% end %>
      <div id="last-sync" style="display: inline-block;">
        <%= render partial: 'last_sync' %>
      </div>
      <%= link_to new_gig_path, class: "btn btn-primary pull-right" do %>
        <%= fa_icon 'plus' %> New Gig
      <% end %>
    </div>
  </div>
</div>

<div id="events-grid">
  <%= render partial: 'grid', locals: { events: @events } %>
</div>

<hr/>

<%= link_to new_gig_path, class: "btn btn-primary pull-right" do %>
  <%= fa_icon 'plus' %> New Gig
<% end %>
