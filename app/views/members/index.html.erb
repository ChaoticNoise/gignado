<p id="notice"><%= notice %></p>

<h1>Listing Members</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Active?</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= member.first_name %></td>
          <td><%= member.last_name %></td>
          <td><%= member.email %></td>
          <td><%= member.is_active %></td>
          <td><%= link_to 'Edit', edit_member_path(member) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
