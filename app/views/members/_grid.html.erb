<%- Member.sections.keys.reverse.each do |section| -%>
  <%- if members.where(section: section).exists? %>
    <div class="panel panel-default">
      <div class="panel-heading"><%= section.capitalize.pluralize %></div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Status</th>
                <th colspan="1"></th>
              </tr>
            </thead>

            <tbody>
              <% members.where(section: section).each do |member| %>
                <tr>
                  <td width="25%"><%= member %></td>
                  <td width="25%"><%= member.email %></td>
                  <td width="25%"><%= member.telephone %></td>
                  <td width="25%"><%= member.status %></td>
                  <td class="col-fixed-icon">
                    <%= link_to edit_member_path(member) do %>
                      <%= fa_icon "pencil" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
